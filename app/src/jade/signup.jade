section.container
    .row
        .col-lg-12
            .col-lg-8.col-lg-push-2
                .panel.panel-primary
                    .panel-heading
                        | User SignUp
                    .panel-body
                        form#signUpUserForm(name='signUpUserForm', class='form-horizonal', type='form', novalidate)
                            .col-lg-6
                                .form-group.has-warning
                                    label.control-label(for='username')
                                        | Username
                                        span(class='star-label') *
                                    div(ng-class="{ 'has-error' : signUpUserForm.username.$invalid }")
                                        input#username.form-control(type='text',name='username',ng-model='user.username',placeholder='Username', required, autofocus)
                                        small(class="label label-danger",ng-show="signUpUserForm.username.$invalid && signUpUserForm.username.$dirty") Required Username !
                                
                                .form-group.has-warning
                                    label.control-label(for='password')
                                        | Password
                                        span(class='star-label') *
                                    div(ng-class="{ 'has-error' : signUpUserForm.password.$invalid }")
                                        input#password.form-control(type='password',name='password',ng-model='user.password',placeholder='Password', required, ng-minlength="6")
                                        small(class="label label-danger",ng-show="signUpUserForm.password.$invalid && signUpUserForm.password.$dirty") Password should be atleast 6 characters !
                            .col-lg-6
                                .form-group.has-warning
                                    label.control-label(for='email')
                                        | Email
                                        span(class='star-label') *
                                    div(ng-class="{ 'has-error' : signUpUserForm.email.$invalid }")
                                        input#email.form-control(type='email',name='email',ng-model='user.email',placeholder='Email', required)
                                        small(class="label label-danger",ng-show="signUpUserForm.email.$invalid && signUpUserForm.email.$dirty") Required Email !
                                .form-group.has-warning
                                    label.control-label(for='mobileNumber')
                                        | Mobile Number
                                        span(class='star-label') *
                                    div(ng-class="{ 'has-error' : signUpUserForm.mobileNumber.$invalid }")
                                        input#mobileNumber.form-control(type='tel',name='mobileNumber',ng-model='user.mobileNumber',placeholder='Mobile Number',ng-maxlength="10", ng-minlength="10",required)
                                        small(class="label label-danger",ng-show="signUpUserForm.mobileNumber.$invalid && signUpUserForm.mobileNumber.$dirty") Required 10 digits mobile number !
                                
                                .pull-right
                                        button.btn.btn-primary(ng-click='signUp(user)', ng-disabled='signUpUserForm.$invalid')
                                            i.glyphicon.glyphicon-plus
                                            |   SignUp                                        

                .alert.alert-success(ng-show='successMessage')
                    i.fa.fa-check-circle-o
                    | {{ successText }}
